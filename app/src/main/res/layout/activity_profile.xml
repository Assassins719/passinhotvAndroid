<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black"
    android:orientation="vertical"
    tools:context="com.passinhotv.android.activity.ProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btn_back"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Voltar"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:background="#00000000"
            android:textColor="@color/color_green"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btn_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_profile_setting" />
        <Button
            android:id="@+id/btn_user"
            android:layout_toLeftOf="@+id/btn_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_profile_user" />
        <Button
            android:id="@+id/btn_chart"
            android:layout_toLeftOf="@+id/btn_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_profile_chart" />

    </RelativeLayout>
</LinearLayout>